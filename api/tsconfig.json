// backend/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",         /* Modern JavaScript version compatibility */
    "module": "commonjs",       /* Standard for Node.js */
    "rootDir": "./src",         /* All source code will be in the 'src' folder */
    "outDir": "./dist",         /* Compiled JavaScript will go here */
    "esModuleInterop": true,    /* Allows compatibility between module systems */
    "forceConsistentCasingInFileNames": true,
    "strict": true,             /* Enables all strict type-checking options */
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}